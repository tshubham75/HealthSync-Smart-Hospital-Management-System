<%= form_with model: @patient, url: @patient.persisted? ? patient_path(@patient) : patients_path, method: @patient.persisted? ? :patch : :post, local: true, class: "max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-lg" do |f| %>

<h2 class="text-2xl font-bold text-gray-800 mb-4">Patient Registration</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="field">
    <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :first_name, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="field">
    <%= f.label :middle_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :middle_name, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :last_name, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :date_of_birth, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
</div>

<div class="field mt-4">
  <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_area :address, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
  <div class="field">
    <%= f.label :contact_number, class: "block text-sm font-medium text-gray-700" %>
    <%= f.telephone_field :contact_number, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
  <div class="field">
    <%= f.label :gender, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :gender, [['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']], required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="field">
    <%= f.label :blood_group, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :blood_group, [['A+', 'A+'], ['A-', 'A-'], ['B+', 'B+'], ['B-', 'B-'], ['O+', 'O+'], ['O-', 'O-'], ['AB+', 'AB+'], ['AB-', 'AB-']], required: true, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
</div>

<div class="field mt-4">
  <%= f.label :photo, "Upload Photo", class: "block text-sm font-medium text-gray-700" %>
  <%= f.file_field :photo, class: "mt-1 p-2 w-full border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
</div>

<div class="actions mt-6">
  <%= f.submit "Save Patient Profile", method: :post, class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
</div>

<% end %>
