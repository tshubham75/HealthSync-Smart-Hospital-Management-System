<h1 class="text-2xl font-bold text-center text-gray-800 my-6">Slots List</h1>

<div class="max-w-3xl mx-auto">
  <% @slot.each do |slot| %>
  
    <div class="bg-white rounded-lg shadow-md p-5 mb-6 border border-gray-200">
      <p class="text-lg font-semibold text-gray-700"><strong>ID:</strong> <%= slot.id %></p>
      <p class="text-gray-600"><strong>Doctor Profile ID:</strong> <%= slot.doctor_profile_id %></p>
      <p class="text-gray-600">
        <strong>Start Time:</strong> 
        <%= slot.start_time.strftime("%d-%m-%Y %I:%M %p") if slot.start_time %>
      </p>
      <p class="text-gray-600">
        <strong>End Time:</strong> 
        <%= slot.end_time.strftime("%d-%m-%Y %I:%M %p") if slot.end_time %>
      </p>
      <p class="text-gray-600"><strong>User ID:</strong> <%= slot.user_id || "N/A" %></p>
      <p class="text-gray-600"><strong>Patient Profile ID:</strong> <%= slot.patient_profiles_id || "N/A" %></p>

      <% if slot.user_id.present? %>
        <button class="bg-red-500 text-white font-semibold py-2 px-4 rounded-md mt-3 w-full opacity-50 cursor-not-allowed"
                onclick="alert('Slot is already booked! Please select an available slot.')">
          Slot Booked
        </button>
      <% else %>
        <button class="bg-green-500 text-white font-semibold py-2 px-4 rounded-md mt-3 w-full hover:bg-green-600">
          Book Slot
        </button>
      <% end %>
    </div>
  <% end %>
</div>
