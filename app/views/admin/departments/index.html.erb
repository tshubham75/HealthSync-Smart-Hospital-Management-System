<div class="container">
  <h1>Departments</h1>
  
  <%= link_to 'New Department', new_admin_department_path, class: 'btn btn-primary mb-3' %>
  
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <% if current_user.role == 'admin'%>
        <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <td><%= department.description %></td>
          <% if current_user.role == 'admin'%>
          <td>

            <%= link_to 'Edit', edit_admin_department_path(department) %>
         <%= button_to 'Delete Department', admin_department_path(department), 
  method: :delete, 
  data: { confirm: 'Are you sure you want to delete this department?' },
  class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out' %>

          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>