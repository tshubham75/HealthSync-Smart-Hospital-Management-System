<%= form_with(model: @department, url: @department.new_record? ? admin_departments_path : admin_department_path(@department), local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit @department.new_record? ? "Create Department" : "Update Department", class: "btn btn-success" %>
  </div>
<% end %>
