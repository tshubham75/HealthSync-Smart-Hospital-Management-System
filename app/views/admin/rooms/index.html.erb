<h1 class="text-2xl font-bold mb-4 text-gray-800">Rooms List</h1>

<div class="overflow-x-auto rounded-lg shadow-lg border border-gray-200">
  <table class="w-full text-left border-collapse">
    <thead>
      <tr class="bg-gray-100 border-b">
        <th class="p-3 text-gray-700">ID</th>
        <th class="p-3 text-gray-700">Department ID</th>
        <th class="p-3 text-gray-700">Room Number</th>
        <th class="p-3 text-gray-700">User ID</th>
        <th class="p-3 text-gray-700">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <% @rooms.each do |room| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="p-3 text-gray-800"><%= room.id %></td>
          <td class="p-3 text-gray-800"><%= room.department_id %></td>
          <td class="p-3 text-gray-800"><%= room.room_number %></td>
          <td class="p-3 text-gray-800"><%= room.user_id || "N/A" %></td>
          <td class="p-3 text-gray-800 flex space-x-2">
            <%= link_to 'Show', admin_room_path(room), class: "text-blue-500 hover:underline" %>
            <span>|</span>
            <%= link_to 'Edit', edit_admin_room_path(room), class: "text-yellow-500 hover:underline" %>
            <span>|</span>
            <%= link_to 'Delete', admin_room_path(room), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= link_to 'New Room', new_admin_room_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
</div>